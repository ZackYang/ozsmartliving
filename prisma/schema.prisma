// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://localhost:27017/ozsmartliving"
}

type Texture {
  permalink String
  type      String
  images    Image[]
}

type Image {
  url         String
  order       Int      @default(0)
  description String
  createdAt   DateTime @default(now())
}

enum ProductType {
  sheerCurtain
  blockoutCurtain
  doubleCuratin
}

model Product {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  Permalink        String
  type             ProductType
  name             String
  code             String
  supplierName     String
  unitPrice        Float
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  disabled         Boolean     @default(false)
  archived         Boolean     @default(false)
  careInstructions String
  variations       Variation[]
  images           Image[]
}

model Variation {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  disabled         Boolean    @default(false)
  archived         Boolean    @default(false)
  unitPrice        Float
  name             String
  code             String
  careInstructions String     @map("care_instructions")
  composition      String
  shadingRate      Int
  energyEfficiency Int
  daytimePrivacy   Int
  nightimePrivacy  Int
  product          Product    @relation(fields: [productId], references: [id])
  productId        String     @db.ObjectId
  textures         Texture[]
  LineItem         LineItem[]
}

model LineItem {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  reference    String    @unique @default(cuid())
  variation    Variation @relation(fields: [variationId], references: [id])
  specfication Json
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  archivedAt   DateTime?
  quantity     Int
  total        Float
  Order        Order?    @relation(fields: [orderId], references: [id])
  orderId      String?   @db.ObjectId
  variationId  String    @db.ObjectId
}

enum OrderStatus {
  pending
  paid
  cooled
  productionBooked
  producting
  internalShipping
  internaReceived
  internaPackaged
  shipped
  delivered
  cancelled
}

model Order {
  id                 String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  paidAt             DateTime?
  cooledAt           DateTime?
  productionBookedAt DateTime?
  internalShippedAt  DateTime?
  internalReceivedAt DateTime?
  internalPackagedAt DateTime?
  shippedAt          DateTime?
  deliveredAt        DateTime?
  cancelledAt        DateTime?
  archivedAt         DateTime?
  notes              String?
  status             OrderStatus @default(pending)
  archivedReason     String?
  lines              LineItem[]
  total              Float
  gst                Float
  User               User        @relation(fields: [userId], references: [id])
  userId             String      @db.ObjectId
}

type Address {
  unit     String?
  street   String
  street2  String?
  city     String
  state    String
  postcode String
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  disabled        Boolean  @default(false)
  archived        Boolean  @default(false)
  email           String   @unique
  deliveryAddress Address
  billingAddress  Address?
  phone           String?
  name            String?
  password        String?
  orders          Order[]
}

model Hello {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
}
